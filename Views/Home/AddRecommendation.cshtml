@{
    ViewData["Title"] = "Add A Recommendation";
}

@using Restaurants.Models;
@model UserRecommendation;

<div class="container col-8">
    <form asp-controller="Home" asp-action="AddRecommendation" method="post" class="col-10 container">
        <div class="row my-2">
            <div class="col">
                @Html.LabelFor(r => r.Submitter)
            </div>
            <div class="col">
                @Html.EditorFor(r => r.Submitter)
            </div>
            <div class="col">
                @Html.ValidationMessageFor(r => r.Submitter)
            </div>
        </div>
        <div class="row my-2">
            <div class="col">
                @Html.LabelFor(r => r.Name)
            </div>
            <div class="col">
                @Html.EditorFor(r => r.Name)
            </div>
            <div class="col">
                @Html.ValidationMessageFor(r => r.Name)
            </div>
        </div>
        <div class="row my-2">
            <div class="col">
                @Html.LabelFor(r => r.FavDish)
            </div>
            <div class="col">
                @Html.EditorFor(r => r.FavDish)
            </div>
            <div class="col">
                @Html.ValidationMessageFor(r => r.FavDish)
            </div>
        </div>
        <div class="row my-2">
            <div class="col">
                @Html.LabelFor(r => r.PhoneNumber)
            </div>
            <div class="col">
                @Html.EditorFor(r => r.PhoneNumber)
            </div>
            <div class="col">
                @Html.ValidationMessageFor(r => r.PhoneNumber)
            </div>
        </div>
        <div class="col d-flex justify-content-center">
            <input type="submit" value="Add Recommendation" />
        </div>
    </form>
</div>